# ─────────────────────────────────────────────────────────────
#  AstraNodes — Backend Production Environment Variables
#  Copy to .env and fill in all values before starting the app.
#  deploy.sh generates this file automatically on first deploy.
# ─────────────────────────────────────────────────────────────

NODE_ENV=production
PORT=4000

# Must match your actual domain (used for CORS + Socket.io)
FRONTEND_URL=https://astranodes.cloud

# Minimum 32 characters — generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING_MINIMUM_32_CHARS
JWT_EXPIRES_IN=7d

# Absolute paths recommended in production
DB_PATH=/opt/astranodes/backend/data/astranodes.sqlite
UPLOAD_DIR=/opt/astranodes/backend/uploads

# Rate limiting (ms window, max requests)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200

# ── Pterodactyl ───────────────────────────────────────────────
PTERODACTYL_URL=https://panel.example.com
PTERODACTYL_API_KEY=your-admin-application-api-key
PTERODACTYL_DEFAULT_NODE=1
PTERODACTYL_DEFAULT_EGG=1
# Leave blank to auto-select an available allocation per server
PTERODACTYL_DEFAULT_ALLOCATION=
PTERODACTYL_DEFAULT_DOCKER_IMAGE=ghcr.io/pterodactyl/yolks:java_17
PTERODACTYL_DEFAULT_STARTUP=java -Xms128M -Xmx{{SERVER_MEMORY}}M -jar server.jar
PTERODACTYL_DEFAULT_ENV={"MINECRAFT_VERSION":"1.20.1","SERVER_JARFILE":"server.jar","BUILD_NUMBER":"latest"}

# ── Discord ───────────────────────────────────────────────────
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_SUPPORT_WEBHOOK_URL=https://discord.com/api/webhooks/...
# UPI payment details shown on the Billing page
UPI_ID=yourname@upi
UPI_NAME=Your Name / Business Name


# ── Adsterra ─────────────────────────────────────────────────
ADSTERRA_API_TOKEN=your_api_token
ADSTERRA_DOMAIN_ID=your_domain_id
ADSTERRA_NATIVE_BANNER_ID=
ADSTERRA_BANNER_ID=
ADSTERRA_NATIVE_BANNER_KEY=
ADSTERRA_BANNER_KEY=
ADSTERRA_NATIVE_BANNER_SCRIPT=
ADSTERRA_BANNER_SCRIPT=
ADSTERRA_NATIVE_CONTAINER_ID=
